  .home {
    background: linear-gradient(#FEC806, #FFF) no-repeat;
    background-size: 100% 200px;
  }

  .top {
    width: 90vw;
    margin: 0 auto 10px;

    .area {
      vertical-align: middle;
      line-height: 54px;
    }

    .icon-jiantouxia {
      font-size: 14px;
      padding-left: 5px;
    }
  }

  .categories {
    margin: 0 5vw;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    text-align: center;
    background: #FFF;
    border-radius: 20px;
    padding: 4vw 0;

    > view {
      width: 20vw;
      margin-bottom: 4vw;

      .iconfont {
        font-size: 30px;
      }

      .name {
        font-size: 12px;
        padding-top: 4px;
      }
    }
  }
</style>
